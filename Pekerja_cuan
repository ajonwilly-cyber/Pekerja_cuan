<script>
const soalData = [
 {t:"Pulau terbesar di Indonesia adalah …",o:["Sumatra","Sulawesi","Kalimantan","Papua"],j:3},
 {t:"Ibu kota Jawa Tengah adalah …",o:["Yogyakarta","Semarang","Surakarta","Magelang"],j:1},
 {t:"Pulau Papua berada di Indonesia bagian …",o:["Barat","Tengah","Selatan","Timur"],j:3},
 {t:"Ibu kota Sumatra Barat adalah …",o:["Pekanbaru","Jambi","Padang","Bengkulu"],j:2},
 {t:"Provinsi dengan ibu kota Makassar adalah …",o:["Sulut","Sulteng","Sulsel","Sulbar"],j:2},
 {t:"Pulau Lombok termasuk Provinsi …",o:["Bali","NTB","NTT","Maluku"],j:1},
 {t:"Ibu kota Aceh adalah …",o:["Medan","Banda Aceh","Langsa","Lhokseumawe"],j:1},
 {t:"Pulau Sumatra berada di Indonesia bagian …",o:["Barat","Tengah","Timur","Selatan"],j:0},
 {t:"Ibu kota Kalimantan Timur adalah …",o:["Pontianak","Samarinda","Balikpapan","Banjarmasin"],j:1},
 {t:"Provinsi Banten terletak di Pulau …",o:["Sumatra","Kalimantan","Jawa","Sulawesi"],j:2},
 {t:"Pulau Madura berada di sebelah … Pulau Jawa",o:["Barat","Selatan","Timur","Utara"],j:3},
 {t:"Ibu kota Maluku adalah …",o:["Ternate","Ambon","Sorong","Manokwari"],j:1},
 {t:"Pulau Sulawesi berada di Indonesia bagian …",o:["Barat","Tengah","Timur","Selatan"],j:2},
 {t:"Provinsi Bali terletak di Pulau …",o:["Lombok","Sumatra","Jawa","Kalimantan"],j:2},
 {t:"Papua Selatan merupakan pemekaran dari Provinsi …",o:["Papua Barat","Papua Tengah","Papua Pegunungan","Papua"],j:3}
];

let index=0, skor=0, timer, waktu=20;
soalData.sort(()=>Math.random()-0.5);

function mulai(){
    const nama=document.getElementById("nama").value;
    if(!nama){alert("Nama peserta wajib diisi");return;}
    document.getElementById("start").classList.add("hidden");
    document.getElementById("quiz").classList.remove("hidden");
    tampil();
}

function tampil(){
    if(index>=soalData.length){selesai();return;}
    waktu=20;
    document.getElementById("time").innerText=waktu;
    document.getElementById("soal").innerText=soalData[index].t;
    let opsi="";
    soalData[index].o.forEach((o,i)=>{
        opsi+=`<div class="option"><button onclick="jawab(${i})">${o}</button></div>`;
    });
    document.getElementById("opsi").innerHTML=opsi;

    timer=setInterval(()=>{
        waktu--;
        document.getElementById("time").innerText=waktu;
        if(waktu<=0){
            clearInterval(timer);
            index++;
            tampil();
        }
    },1000);
}

function jawab(p){
    clearInterval(timer);
    if(p===soalData[index].j) skor+=10;
    index++;
    tampil();
}

function selesai(){
    document.getElementById("quiz").classList.add("hidden");
    document.getElementById("hasil").classList.remove("hidden");
    document.getElementById("namaHasil").innerText=document.getElementById("nama").value;
    document.getElementById("skor").innerText=skor;
    document.getElementById("rupiah").innerText=(skor*1000).toLocaleString("id-ID");
}
</script>

